@page
@model forum_app.Pages.DeleteTopicModel
@{
    ViewData["Title"] = "Delete Topic";
}

<h1>Delete Topic</h1>

<h3>Are you sure you want to delete this Topic?</h3>

<div>
    <dl class="row mb-3">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TopicItem.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TopicItem.Title)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="TopicItem.Id" />

        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <a asp-page="Index">Back to Forum</a>
    </form>
</div>
