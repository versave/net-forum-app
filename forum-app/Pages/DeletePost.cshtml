@page
@model forum_app.Pages.DeletePostModel
@{
    ViewData["Title"] = "Delete Post";
}

<h1>Delete Post</h1>

<h3>Are you sure you want to delete this post?</h3>

<div>
    <dl class="row mb-3">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostItem.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostItem.Title)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="PostItem.Id" />

        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <a asp-page="Index">Back to Forum</a>
    </form>
</div>
